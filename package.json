{
  "name": "lpproj",
  "version": "1.0.0",
  "private": true,
  "description": "Swordroot's LP project",
  "scripts": {
    "dev": "nuxt",
    "prd": "nuxt build && nuxt start",
    "build": "nuxt build",
    "deploy:hosting": "firebase deploy --only hosting --project swordroot-lp",
    "deploy:functions": "cd functions && npm run build && firebase deploy --only functions --project swordroot-lp",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "test": "jest"
  },
  "author": "Swordroot",
  "license": "ISC",
  "dependencies": {
    "@nuxtjs/axios": "^5.5.4",
    "nuxt": "^2.8.1",
    "ts-node": "^8.3.0",
    "vue-property-decorator": "^8.2.1"
  },
  "devDependencies": {
    "@nuxt/typescript": "^2.8.1",
    "@nuxtjs/eslint-config": "^1.0.1",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint": "^5.16.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^#/(.+)": "<rootDir>/$1"
    }
  }
}
